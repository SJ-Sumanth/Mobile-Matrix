{
  "name": "mobile-matrix",
  "version": "2.0.0",
  "description": "AI-powered phone comparison platform using Google Flash 2.5",
  "keywords": ["ai", "phone-comparison", "nextjs", "typescript", "google-ai", "mobile", "react"],
  "author": "Mobile Matrix Contributors",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/YOUR_USERNAME/mobile-matrix.git"
  },
  "bugs": {
    "url": "https://github.com/YOUR_USERNAME/mobile-matrix/issues"
  },
  "homepage": "https://github.com/YOUR_USERNAME/mobile-matrix#readme",
  "private": false,
  "type": "module",
  "scripts": {
    "dev": "next dev --turbopack",
    "dev:webpack": "next dev",
    "build": "next build --turbopack",
    "start": "next start",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:unit": "vitest run --testNamePattern=\"(?!integration|e2e|performance|accessibility)\"",
    "test:integration": "vitest run --testNamePattern=\"integration\"",
    "test:performance": "vitest run --testNamePattern=\"performance\"",
    "test:accessibility": "vitest run --testNamePattern=\"accessibility|a11y\"",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:visual": "playwright test tests/visual/",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:e2e",
    "prepare": "husky",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:seed": "tsx prisma/seed.ts",
    "db:studio": "prisma studio",
    "db:reset": "prisma migrate reset",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "sync:full": "node scripts/sync-data.js full",
    "sync:status": "node scripts/sync-data.js status",
    "sync:phone": "node scripts/sync-data.js phone",
    "sync:clear-cache": "node scripts/sync-data.js clear-cache",
    "perf:test": "node scripts/performance-test.js",
    "perf:monitor": "node -e \"import('./src/lib/performance/monitor.js').then(m => console.log('Performance monitoring enabled'))\"",
    "perf:analyze": "node -e \"console.log('Performance analysis - check performance-results/ directory')\"",
    "deploy:db": "./scripts/deploy-db.sh",
    "deploy:app": "./scripts/deploy-app.sh",
    "deploy:full": "./scripts/deploy-app.sh",
    "backup:db": "./scripts/backup-db.sh",
    "restore:db": "./scripts/restore-db.sh",
    "disaster:recovery": "./scripts/disaster-recovery.sh",
    "health:check": "curl -f http://localhost:3000/api/health || echo 'Health check failed'",
    "security:check": "powershell -ExecutionPolicy Bypass -File scripts/security-check.ps1",
    "prepare:opensource": "npm run security:check && echo 'Ready for open source release!'",
    "docker:build": "docker build -t mobile-matrix:latest .",
    "docker:up": "docker-compose -f docker-compose.prod.yml up -d",
    "docker:down": "docker-compose -f docker-compose.prod.yml down",
    "docker:logs": "docker-compose -f docker-compose.prod.yml logs -f",
    "monitoring:up": "docker-compose -f monitoring/docker-compose.monitoring.yml up -d",
    "monitoring:down": "docker-compose -f monitoring/docker-compose.monitoring.yml down"
  },
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "@prisma/client": "^6.14.0",
    "@types/uuid": "^10.0.0",
    "clsx": "^2.1.1",
    "commander": "^12.1.0",
    "lucide-react": "^0.542.0",
    "next": "15.5.2",
    "pg": "^8.16.3",
    "prisma": "^6.14.0",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "redis": "^5.8.2",
    "tailwind-merge": "^3.3.1",
    "uuid": "^11.1.0",
    "web-vitals": "^5.1.0",
    "zod": "^4.1.3"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^4.1.1",
    "@eslint/eslintrc": "^3",
    "@storybook/addon-a11y": "^9.1.3",
    "@storybook/addon-docs": "^9.1.3",
    "@storybook/addon-onboarding": "^9.1.3",
    "@storybook/addon-vitest": "^9.1.3",
    "@storybook/nextjs-vite": "^9.1.3",
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^20",
    "@types/pg": "^8.15.5",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/redis": "^4.0.10",
    "@vitest/browser": "3.2.4",
    "@vitest/coverage-v8": "3.2.4",
    "@vitest/ui": "^3.2.4",
    "eslint": "^9",
    "eslint-config-next": "15.5.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-storybook": "^9.1.3",
    "husky": "^9.1.7",
    "jsdom": "^26.1.0",
    "lint-staged": "^16.1.5",
    "playwright": "^1.55.0",
    "prettier": "^3.6.2",
    "storybook": "^9.1.3",
    "tailwindcss": "^4",
    "tsx": "^4.20.5",
    "typescript": "^5",
    "vitest": "^3.2.4"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,md}": [
      "prettier --write"
    ]
  }
}
